- @body_class = 'bg-navy'
.admin-section
  %strong#notice= notice
  %h1 Все фото
  
  %table.pure-table
    %thead
      %tr
        %th №
        %th URL
        %th Категория
        %th Дата
        %th
        %th
        
    %tbody
      - @photos.each do |photo|
        %tr.pure-table-odd
          %td= photo.id
          %td= photo.url
          %td= photo.category
          %td= l (photo.created_at), format: :short
          %td
            = link_to photo.url, data: {colorbox: "true", colorbox_max_height:"90%"}, title: "Показать", style:"color:rgb(28, 184, 65);font-size:20px;" do
              %i.fa.fa-eye

          %td= link_to "<i class='fa fa-trash'></i>".html_safe, photo, :method => :delete, :data => { :confirm => 'Уверен?' }, title: "Удалить", style: "color:rgb(202, 60, 60);font-size:20px;"

  %br
  
  = link_to 'Добавить фото', new_photo_path, class: 'pure-button'