- @body_class = 'bg-navy'
.admin-section
  %strong#notice= notice
  %h1 Все видео
  
  %table.pure-table
    %thead
      %tr
        %th №
        %th URL
        %th Категория
        %th Дата
        %th
        %th
        
    %tbody
      - @videos.each do |video|
        %tr.pure-table-odd
          %td= video.id
          %td(style="width:400px;")= video.url
          %td= video.category
          %td= l (video.created_at), format: :short
          %td
            = link_to video, title: "Показать", style:"color:rgb(28, 184, 65);font-size:20px;" do
              %i.fa.fa-eye

          %td= link_to "<i class='fa fa-trash'></i>".html_safe, video, :method => :delete, :data => { :confirm => 'Уверен?' }, title: "Удалить", style: "color:rgb(202, 60, 60);font-size:20px;"

  %br

  = link_to 'Добавить видео', new_video_path, class: 'pure-button'
